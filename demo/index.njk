<script>
// Prevent form submissions on demo page
document.addEventListener('DOMContentLoaded', function() {
    // Intercept all form submissions
    document.addEventListener('submit', function(e) {
        e.preventDefault();
        e.stopPropagation();
        alert('This is a demo page. Form submissions are disabled.');
        return false;
    }, true);

    // Block HubSpot form submissions via message interception
    window.addEventListener('message', function(e) {
        if (e.data && typeof e.data === 'object' && e.data.type === 'hsFormCallback' && e.data.eventName === 'onFormSubmit') {
            e.stopImmediatePropagation();
        }
    }, true);
});
</script>
